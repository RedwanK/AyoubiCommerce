{% extends 'Connexion/layout.html.twig' %}

{% block title %}
Créer un compte
{% endblock %}

{% block content %}
<div class="sixteen wide column">
    <h2 class="ui teal image header">
        <img src="../../assets/images/logo.png" class="image" alt="Logo de ayoubicommerce">
        <div class="content">
            Créer un compte
        </div>
    </h2>

    <form class="ui large form" method="post" action="/creer-compte" enctype="multipart/form-data">
        <div class="ui stacked segment">
            <div class="field">
                <div class="ui left input">
                    <input required value="{{ firstname ? firstname : '' }}" name="firstname" type="text"
                        class="form-control" id="firstname" placeholder="Prénom">
                </div>
            </div>
            <div class="field">
                <div class="ui left input">
                    <input required value="{{ familyname ? familyname : '' }}" name="familyname" type="text"
                        class="form-control" id="familyname" placeholder="Nom">
                </div>
            </div>
            <div class="field">
                <div class="ui left input">
                    <input required value="{{ address ? address : '' }}" name="address" type="text" class="form-control"
                        id="address" placeholder="Adresse">
                </div>
            </div>
            <div class="field {{ alert ? alert.type == 'USERNAME_TAKEN' ? 'error' : '' : '' }}">
                <div class="ui left input">
                    <input required value="{{ username ? username : '' }}" name="username" type="text"
                        class="form-control" id="username" placeholder="Nom d'utilisateur">
                </div>
            </div>
            <div class="field {{ alert ? alert.type == 'PASSWORDS_NOT_SAME' ? 'error' : '' : '' }}">
                <div class="ui left input">
                    <input required name="password" type="password" class="form-control" id="password"
                        placeholder="Mot de passe">
                </div>
            </div>
            <div class="field {{ alert ? alert.type == 'PASSWORDS_NOT_SAME' ? 'error' : '' : '' }}">
                <div class="ui left input">
                    <input required name="confirmpassword" type="password" class="form-control" id="confirmpassword"
                        placeholder="Confirmer le mot de passe">
                </div>
            </div>
            <div class="field">
                <button class="ui fluid large teal submit button" type="submit">Créer un compte</button>
            </div>
            {% include './_message.html.twig' %}
            <div class="ui error message"></div>
    </form>

    <div class="ui message">
        <a href="/connexion">Retour à la page de connexion</a>
    </div>
</div>
{% endblock %}